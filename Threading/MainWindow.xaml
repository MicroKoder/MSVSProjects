<Window x:Class="Threading.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Threading"
        mc:Ignorable="d"
        Title="MainWindow" Height="154" Width="180.8">
    <Grid >
        <Button Margin="10,10,10,75" Click="Button_Click"/>
        <Label x:Name="display" Margin="10,76,10,10" Content="{Binding Display}"/>
    </Grid>
</Window>
