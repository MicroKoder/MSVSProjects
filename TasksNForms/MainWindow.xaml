<Window x:Class="TasksNForms.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TasksNForms"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <local:MyContext/>
    </Window.DataContext>
    <Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="98,23,0,0" VerticalAlignment="Top" Width="290" Height="50" Click="Button_Click"/>
        <ProgressBar HorizontalAlignment="Left" Height="29" Margin="54,99,0,0" VerticalAlignment="Top" Width="419" Maximum="100" Minimum="0" Value="{Binding Percentage}"/>

    </Grid>
</Window>
